{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "bin/**/*",
    "src/**/*",
    "projects/**/*",
    "*.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": [
      "dom"
    ],
    "types": [
      "node"
    ]
  }
}